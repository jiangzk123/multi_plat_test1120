    "configurations": [
        {
            "name": "(gdb) 启动",
            "type": "cppdbg",
            "request": "launch",
           //windows下
           // "program": "${workspaceFolder}/build/main_test1.exe",
           //linux下
           "program": "${workspaceFolder}/build/main_test1",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            //运行windows的编译
            //"preLaunchTask": "Run Batch File windows"
            //运行linux的编译
            "preLaunchTask": "Run Batch File linux"
        }

    ]
